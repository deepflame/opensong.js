{{#this}}
{{!-- Header --}}
{{#if header}}
<h2>{{human_header header}}</h2>
{{/if}}

{{#lines}}

{{!-- Lyrics and Chords--}}
{{#if_or lyrics chords}}
<table>
	<tr class="chords">
		{{#chords}}
		<td>{{transpose this}}</td>
		{{/chords}}
	</tr>
	{{#lyrics}}
	<tr class='lyrics'>
		{{#this}}
		<td>{{this}}</td>
		{{/this}}
	</tr>
	{{/lyrics}}
</table>
{{/if_or}}

{{!-- Comments --}}
{{#if comments}}
<div class"comments">
  {{comments}}
</div>
{{/if}}

{{/lines}}

{{/this}}
